{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build and debug",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++20", // "-std=c++17",
                "-stdlib=libc++",
                //    "-v",
                "-I",
                "/Users/goke/Library/CloudStorage/OneDrive-Personal/zs/core/cpp/CPPConsoleApp/include",
                "-g",
                "/Users/goke/Library/CloudStorage/OneDrive-Personal/zs/core/cpp/CPPConsoleApp/src/*.cpp",
                // $(find [RootFolderName] -type f -iregex ".*\\.cpp")
                "$(find",
                ".", // "${workspaceFolder}",
                "-type",
                "f",
                "-iregex",
                "'.*\\.cpp')",
                // "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/bin/debug/osx/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/clang++"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build and debug",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20", // "-std=c++17",
                "-g",
                // $(find [RootFolderName] -type f -iregex ".*\\.cpp")
                "$(find",
                ".", // "${workspaceFolder}",
                "-type",
                "f",
                "-iregex",
                "'.*\\.cpp')",
                // "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/bin/debug/linux/main}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        }
    ],
    "version": "2.0.0"
}