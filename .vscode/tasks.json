{
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
                    "\"C:/Program Files/Microsoft Visual Studio/2022/Enterprise/Common7/Tools/VsDevCmd.bat\"",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build and debug",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++20", // "-std=c++17",
                "-stdlib=libc++",
                //    "-v",
                "-I",
                "/Users/goke/Library/CloudStorage/OneDrive-Personal/zs/core/cpp/CPPConsoleApp/include",
                "-g",
                "/Users/goke/Library/CloudStorage/OneDrive-Personal/zs/core/cpp/CPPConsoleApp/src/*.cpp",
                // $(find [RootFolderName] -type f -iregex ".*\\.cpp")
                "$(find",
                ".", // "${workspaceFolder}",
                "-type",
                "f",
                "-iregex",
                "'.*\\.cpp')",
                // "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/bin/debug/osx/schoolcpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/clang++"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build and debug",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20", // "-std=c++17",
                "-g",
                // $(find [RootFolderName] -type f -iregex ".*\\.cpp")
                "$(find",
                ".", // "${workspaceFolder}",
                "-type",
                "f",
                "-iregex",
                "'.*\\.cpp')",
                // "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/bin/debug/linux/schoolcpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "type": "shell",
            "label": "C/C++: cl.exe build debug",
            "command": "cl.exe",
            "args": [
                // "/std:c++17",
                // // "/W4",
                "/Zi", // /debug
                "/EHsc",
                // // "/nologo",
                // "/D_WIN32_WINNT=0x0601",
                // "/DCROW_ENABLE_DEBUG",
                // // "/D_BOOST_DATE_TIME_DYN_LINK",
                // // "/D_BOOST_ALL_NO_LIB=1",
                // // "/D_BOOST_DATE_TIME_NO_LIB=1",
                // "/DCORE_DLL",
                // "/I",
                // "C:\\sdk\\boost_1_77_0",
                // // "C:\\sdk\\vcpkg\\installed\\x86-windows\\include",
                "${workspaceFolder}\\*.cpp",
                // "${workspaceFolder}\\src\\server\\sqlite3.c",
                "/Fe:", // /out
                "${workspaceFolder}\\bin\\debug\\win\\schoolcpp.exe",
                // "/link",
                // "/LIBPATH:c:\\sdk\\boost_1_77_0\\stage\\lib"
                // // "/LIBPATH:C:\\sdk\\vcpkg\\installed\\x86-windows\\lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                // "isDefault": true
            },
            "detail": "compiler: cl.exe"
        }
    ],
    "version": "2.0.0"
}